<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:foreground="?attr/selectableItemBackgroundBorderless"
    android:minHeight="72dp">

    <ImageView
        android:id="@+id/item_chat_history_imv_start"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_ernie_24dp" />

    <LinearLayout
        android:id="@+id/item_chat_history_ll"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="48dp"
        android:gravity="start"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@id/item_chat_history_imv_start"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/item_chat_history_imv_start"
        app:layout_constraintTop_toTopOf="@id/item_chat_history_imv_start">

        <TextView
            android:id="@+id/item_chat_history_tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/gray_900"
            android:textSize="14sp"
            tools:text="账号与安全" />

        <Space
            android:layout_width="0dp"
            android:layout_height="6dp" />

        <TextView
            android:id="@+id/item_chat_history_tv_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/gray_700"
            android:textSize="12sp"
            tools:text="FengZzz"
            tools:visibility="visible" />
    </LinearLayout>

    <TextView
        android:id="@+id/item_chat_history_tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:textColor="@color/gray_700"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/item_chat_history_imv_start"
        tools:text="2023.12.26 17:40" />

    <View
        android:layout_width="0dp"
        android:layout_height="1px"
        android:background="@color/gray_300"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/item_chat_history_ll" />

</androidx.constraintlayout.widget.ConstraintLayout>