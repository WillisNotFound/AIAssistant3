<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="64dp"
    android:layout_height="164dp"
    android:background="@drawable/shape_bg_round"
    android:backgroundTint="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/create_chat_imv_ernie"
        android:layout_width="36dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_ernie_24dp" />


    <ImageView
        android:id="@+id/create_chat_imv_spark"
        android:layout_width="36dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_spark_24dp" />

    <ImageView
        android:id="@+id/create_chat_imv_qwen"
        android:layout_width="36dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_qwen_24dp" />

</LinearLayout>