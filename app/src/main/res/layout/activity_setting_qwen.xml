<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.willis.ai_assistant3.widget.TopBar
        android:id="@+id/setting_qwen_top_bar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:left_btn_src="@drawable/ic_back_24dp"
        app:top_bar_title="@string/setting_spark_qwen" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingStart="12dp"
        android:paddingEnd="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="12dp" />

            <com.willis.ai_assistant3.widget.RouterItem
                android:id="@+id/setting_qwen_router_api_key"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:background_tint="@color/white"
                app:background_type="top"
                app:end_imv_src="@drawable/ic_edit_24dp"
                app:show_end_imv="true"
                app:show_start_imv="false"
                app:show_title_end_imv="false"
                app:router_item_title="API KEY" />

            <com.willis.ai_assistant3.widget.RouterItem
                android:id="@+id/setting_qwen_router_model"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:background_tint="@color/white"
                app:background_type="center"
                app:end_imv_src="@drawable/ic_edit_24dp"
                app:show_end_imv="true"
                app:show_start_imv="false"
                app:show_title_end_imv="false"
                app:router_item_title="MODEL" />

            <com.willis.ai_assistant3.widget.RouterItem
                android:id="@+id/setting_qwen_router_temperature"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:background_tint="@color/white"
                app:background_type="bottom"
                app:end_imv_src="@drawable/ic_edit_24dp"
                app:show_end_imv="true"
                app:show_start_imv="false"
                app:show_title_end_imv="false"
                app:router_item_title="TEMPERATURE" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>