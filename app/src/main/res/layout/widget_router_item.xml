<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackgroundBorderless"
    android:minHeight="48dp">

    <ImageView
        android:id="@+id/router_imv_start"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:padding="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_chat_24dp"
        tools:visibility="gone" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:gravity="start"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/router_imv_end"
        app:layout_constraintStart_toEndOf="@id/router_imv_start"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginEnd="24dp"
        app:layout_goneMarginStart="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/router_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_900"
                android:textSize="14sp"
                tools:text="账号与安全" />

            <Space
                android:layout_width="4dp"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/router_imv_title_end"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:padding="4dp"
                tools:src="@drawable/ic_chat_24dp" />

        </LinearLayout>


        <TextView
            android:id="@+id/router_tv_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/gray_700"
            android:textSize="12sp"
            tools:text="FengZzz"
            tools:visibility="visible" />

    </LinearLayout>

    <ImageView
        android:id="@+id/router_imv_end"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:padding="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_back_24dp" />

</androidx.constraintlayout.widget.ConstraintLayout>